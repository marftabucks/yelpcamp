<% include ../partials/header %>

<div class="container">
    <header class="jumbotron">
        <div>
            <h1>Welcome to YelpCamp!</h1>
            <p>View our hand-picked campgrounds from all over the world!</p>
            <p>
                <a class="btn btn-primary btn-large"href="/campgrounds/new">Add a new campground</a>
            </p>
        </div>
    </header>
    
    <div class="row">
        <div class="col-lg-12">
            <h3>Our Most Popular Campgrounds!</h3>
        </div>
    </div>

    <div class="row text-center" style="display:flex; flex-wrap:wrap;">
        <% campgrounds.forEach(function(campground){ %>
            <div class="col-md-3 col-sm-6 mr-auto">
                <div class="card">
                    <img src="<%= campground.image %>" class="card-img-top img-fluid">
                    <div class="card-body">
                        <h4 class="card-title"><%= campground.name %></h4>
                        <p>
                            <a href="/campgrounds/<%= campground._id %>" class="btn btn-primary">More Info</a>
                        </p>
                    </div>
                </div>
            </div>
        <% }); %>
    </div>
    
</div>


<% include ../partials/footer %>
